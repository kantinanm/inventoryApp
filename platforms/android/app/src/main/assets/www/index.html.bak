      <!-- Modal -->
       <script type="text/javascript">




          jQuery(document).ready(function( $ ) {
              console.log("Loading");

          });

          $("#txtCode")
              .focusout(function() {
                  console.log("on blur "+$("#txtCode").val());
                  console.log("lenght :"+$("#txtCode").val().length);
                  console.log(" ajax hidIsFound :"+$("#hidIsFound").val());
                  if($("#txtCode").val().length>0 & $("#hidIsFound").val()==0){
                      //$("#loadingDiv").addClass("ui loading form");
                      //setTimeout(function(){ clearLoading(); }, 3000);

                      $.ajax
                      ({
                          type: "GET",
                          url: "http://10.27.65.17:3000/api/item/"+$("#txtCode").val(),
						  crossDomain: true,
						  headers: {  'Access-Control-Allow-Origin': "*" },
                          dataType: 'json',
                          contentType : 'application/json; charset=utf-8',
                          //json object to sent to the authentication url
                          success: function (data) {

                              //alert("Thanks!");
                              console.log(data);


                              if(data.length==1){
                                  $("#hidIsFound").val(1);
                                  $("#txtCode").attr("disabled","disabled");
                                  console.log("Found "+data);
                                  console.log("- hidIsFound :"+$("#hidIsFound").val());
                                  $("#item_code").html(data[0].item_code);
                                  $("#assetname").html(data[0].name);
                                  $("#asset_type").html(data[0].item_type);
                                  $("#asset_kind").html(data[0].kind);
                                  $("#brand").html(data[0].brand);
                                  $("#model").html(data[0].model);
                                  $("#serial").html(data[0].serial);
                                  $("#price").html(data[0].price);

                                  $("#organization").html(data[0].organization);
                                  $("#holder").html(data[0].holder);
                                  $("#room").html(data[0].room);


                                  if(data[0].status=="จำหน่าย"){
                                      $("#labelStatus").show();
                                      $("#cornerLabel").show();
                                  }else{
                                      $("#labelStatus").hide();
                                      $("#cornerLabel").hide();
                                  }

                                  $('#btnDetail').trigger( "click" );

                              }else{
                                  console.log("Notfound ");
                                  $("#txtCode").val(""); //clear
                              }

                              clearLoading();
                          }
                      })


                  }else{
                      console.log("Please input code or clear last state hidIsFound");
                  }

              });


      </script>
      <script type="text/javascript">
          function clearLoading(){
          //alert("Clear");
          $("#loadingDiv").removeClass("ui loading form");

          }

		  function scan(){
			 console.log("clicked");
			 cordova.plugins.barcodeScanner.scan(function(result){
			 //success callback
			 //alert(JSON.stringify(result));
			  $("#txtCode").val(result);

			   $.ajax
				  ({
					  type: "GET",
					  url: "http://10.27.65.17:3000/api/item/"+$("#txtCode").val(),
					  crossDomain: true,
					  headers: {  'Access-Control-Allow-Origin': "*" },
					  dataType: 'json',
					  contentType : 'application/json; charset=utf-8',
					  //json object to sent to the authentication url
					  success: function (data) {

						  //alert("Thanks!");
						  console.log(data);


						  if(data.length==1){
							  $("#hidIsFound").val(1);
							  $("#txtCode").attr("disabled","disabled");
							  console.log("Found "+data);
							  console.log("- hidIsFound :"+$("#hidIsFound").val());
							  $("#item_code").html(data[0].item_code);
							  $("#assetname").html(data[0].name);
							  $("#asset_type").html(data[0].item_type);
							  $("#asset_kind").html(data[0].kind);
							  $("#brand").html(data[0].brand);
							  $("#model").html(data[0].model);
							  $("#serial").html(data[0].serial);
							  $("#price").html(data[0].price);

							  $("#organization").html(data[0].organization);
							  $("#holder").html(data[0].holder);
							  $("#room").html(data[0].room);


							  if(data[0].status=="จำหน่าย"){
								  $("#labelStatus").show();
								  $("#cornerLabel").show();
							  }else{
								  $("#labelStatus").hide();
								  $("#cornerLabel").hide();
							  }

							  $('#btnDetail').trigger( "click" );

						  }else{
							  console.log("Notfound ");
							  $("#txtCode").val(""); //clear
						  }

						  clearLoading();
					  }
				  })

			 },function(error){
			 //error callback
			 alert(JSON.stringify(error));

			 });
		  }

          function clearModal(){
              $("#assetname").html("");
              $("#asset_type").html("");
              $("#asset_kind").html("");
              $("#brand").html("");
              $("#model").html("");
              $("#serial").html("");
              $("#price").html("");
              $("#item_code").html("");
              $("#organization").html("");
              $("#holder").html("");
              $("#room").html("");

              $("#hidIsFound").val(0);
              $('#txtCode').removeAttr("disabled");
              $('#txtCode').val("");
              console.log("clearModal");
          }

          function updateCheckList(){
              //set data to db

              clearModal();
          }
      </script>
